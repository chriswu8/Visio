<style>
    #examDate {
        margin-right: 20px;
    }

    .symptoms-div {
        margin-top: -15.5vh;
    }

    .show-retinal-images-button {
        padding: 10px 15px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
        background-color: #3498db;
        color: #fff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        outline: none;
        margin-left: 15vw;
        position: fixed;
        bottom: 1vh;
        margin-bottom: 1vh;
    }

    .show-retinal-images-button:hover {
        background-color: #2980b9;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
    }

    .show-retinal-images-button:active {
        transform: translateY(1px);
    }

    .left-patient-column {
        height: 72vh;
        width: 100%;
        overflow-y: auto;
        display: block;
        margin-right: 1vw;
    }

    #search {
        position: sticky;
        background-color: #fff;
        z-index: 999;
    }

    .visual-acuity-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: flex-start;
        height: 20vh;
        margin: 0;
    }


    .visual-acuity {
        flex: 1;
        transform: scale(0.6);
        transform-origin: top left;
        width: 45%;
        box-sizing: border-box;
    }

    .VA-label {
        margin-bottom: 1vh;
    }

    .OD,
    .OS,
    .VA-label {
        font-size: 1.5rem;
    }

    td {
        vertical-align: top;
    }

    td input[type="text"] {
        display: block;
        width: 12vw;
        margin: 0;
        padding: 4px;
        box-sizing: border-box;
    }

    .glaucoma-header-label {
        font-weight: normal;
    }

    .glaucoma-table input[type="text"] {
        display: block;
        width: 8vw;
        margin: 0;
        padding: 4px;
        box-sizing: border-box;
    }

    .glaucoma-table {
        border-collapse: separate;
        border-spacing: 5px;
    }

    .glaucoma-table th,
    .glaucoma-table td {
        padding-right: 8px;
    }
</style>
@code {
    private bool showRetinalImages = false;
    private void ShowRetinalImages()
    {
        showRetinalImages = true;
    }
}
