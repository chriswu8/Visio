    private async Task CloseModal()
    {
        await ShowTheReferralModal.InvokeAsync(false);
    }


    private void Cancel()
    {
        // Emit event to notify parent
        if (ShowTheReferralModal.HasDelegate)
        {
            ShowTheReferralModal.InvokeAsync(false);
        }

    }

    private void Send()
    {
        // Add send logic
    }

}
