<div class="patient-info">
    <div class="input-row">
        <div class="input-label">Last Name:</div>
        <input class="input-field" type="text" />
    </div>
    <div class="input-row">
        <div class="input-label">First Name:</div>
        <input class="input-field" type="text" />
        <div class="input-label">Middle Name:</div>
        <input class="input-field" type="text" />
    </div>
    <div class="info-columns">
        <div class="left-column">
            <div class="input-row">
                <div class="input-label">Address:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">City:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">Birthday Date:</div>
                <input class="input-field" type="date" />
            </div>
            <div class="input-row">
                <div class="input-label">Phone:</div>
                <input class="input-field" type="tel" />
            </div>
            <div class="input-row">
                <div class="input-label">E-mail:</div>
                <input class="input-field" type="email" />
            </div>
            <div class="input-row">
                <div class="input-label">Occupation:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">Last Visit:</div>
                <input class="input-field" type="date" />
            </div>
            <div class="input-row">
                <div class="input-label">First Visit:</div>
                <input class="input-field" type="date" />
            </div>
        </div>
        <div class="right-column">
            <div class="input-row">
                <div class="input-label">Province:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">Postal Code:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">PHN:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">Insurance:</div>
                <input class="input-field" type="text" />
            </div>
            <div class="input-row">
                <div class="input-label">Misc:</div>
                <input class="input-field" type="text" />
            </div>
        </div>
    </div>
    <div class="buttons">
        <button class="save-button" @onclick="OnSave">Save</button>
        <button class="cancel-button" @onclick="OnCancel">Cancel</button>
    </div>
</div>

<style>
    .patient-info {
        padding: 20px;

    }

    .input-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .input-label {
        width: 20%;
        text-align: right;
        margin-right: 10px;
    }

    .input-field {
        width: 80%;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .info-columns {
        display: flex;
        justify-content: space-between;
    }

    .left-column,
    .right-column {
        width: 48%;
    }

    .buttons {
        text-align: right;
        margin-top: 20px;
    }

    .save-button,
    .cancel-button {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        margin-left: 10px;
        cursor: pointer;
    }

        .save-button:hover,
        .cancel-button:hover {
            background-color: #666;
        }
</style>

@code {
    // Define event callbacks
    [Parameter] public EventCallback OnSaveClicked { get; set; }
    [Parameter] public EventCallback OnCancelClicked { get; set; }

    // Event handlers
    private async Task OnSave()
    {
        // Emit the OnSaveClicked event
        await OnSaveClicked.InvokeAsync();
    }

    private async Task OnCancel()
    {
        Console.WriteLine("Cancel button clicked."); 

        // Emit the OnCancelClicked event
        await OnCancelClicked.InvokeAsync();
    }
}